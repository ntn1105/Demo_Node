<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">NodeJS</a>
        </div>
        <ul class="nav navbar-nav navbar-left">
          <li class="active"><a href="/homepage">Home <span class="sr-only">(current)</span></a></li>
          <li><a href="/create">Create User</a></li>
          <li><a href="#">Pricing</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>
    
    <div class="table-container">
     
    
      

      <div class="title">List User</div>

        <table class="table table-striped">
          <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < listUsers.length; i++) { %>
          <tr>
            <td><%= listUsers[i].id %></td>
              <td><%= listUsers[i].email %></td>
              <td><%= listUsers[i].password %></td>
              <td>
                  <a href="/update/<%= listUsers[i].id %>">Edit</a>
                 <form action="/delete-user/<%= listUsers[i].id %>" method="post">
                   <button>Delete</button>
                 </form>
              </td>
          </tr>
      <% } %>
      
     
      </tbody>
    </table>
  
</div>
   
</body>
</html>
